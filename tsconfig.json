{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // js 파일들 ts에서 import해서 쓸 수 있는지
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    //"baseUrl": "./src",
    "noImplicitAny": true, //any 타입 금지 여부
    "strictNullChecks": true, //null, undefined 타입에 이상한 짓 할 시 에러내기
    "removeComments": true, //컴파일시 주석제거
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/pages/api/post/write.js"  ],
  "exclude": [
    "node_modules"
  ]
}
